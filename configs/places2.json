{
    "save_dir": "release_model/",
    "seed": 2020,
    "data_loader": {
        "name": "places2", 
        "zip_root": "../datazip",
        "flist_root": "../flist",
        "w": 512,
        "h": 512,
        "batch_size": 8,
        "num_workers": 4
    },
    "losses": {
        "GAN_LOSS": "nsgan",
        "EDGE_THRESHOLD": 0.5,
        "L1_LOSS_WEIGHT": 1,
        "FM_LOSS_WEIGHT": 10,
        "STYLE_LOSS_WEIGHT": 250,
        "CONTENT_LOSS_WEIGHT": 0.1,
        "INPAINT_ADV_LOSS_WEIGHT": 0.1
    },
    "metrics": [
        "mae",
        "psnr",
        "ssim"
    ],
    "optimizer": {
        "type": "Adam",
        "lr": 0.0001,
        "d2glr": 0.1, 
        "beta1": 0.0,
        "beta2": 0.9,
        "weight_decay": 0,
        "amsgrad": true
    },
    "trainer": {
        "iterations": 2000000,
        "save_freq": 10000,
        "valid_freq": 20000,
        "verbosity": 2,
        "n_critic": 5
    },
    "logger": {
        "log_step": 100,
        "tensorboardX": true
    }
}
